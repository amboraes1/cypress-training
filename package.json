{
  "name": "cypress-training",
  "version": "1.0.0",
  "description": "This is a Workshop about Cypress",
  "main": "index.js",
  "scripts": {
    "test:open": "npm run lint && cypress open",
    "lint": "eslint ./cypress/integration/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "cypress run",
    "pretest": "npm run clean",
    "posttest": "npm run combine-reports && npm run generate-report",
    "clean": "rm -r cypress/reports/*",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/report.json",
    "generate-report": "marge cypress/reports/report.json -f report -o cypress/reports"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amboraes1/cypress-training.git"
  },
  "keywords": [
    "ui-testing",
    "dojo",
    "practice",
    "cypress"
  ],
  "author": "Tomas Alvarez <tomas.alvarez@perficient.com> (amboraes1)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amboraes1/cypress-training/issues"
  },
  "homepage": "https://github.com/amboraes1/cypress-training#readme",
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^5.11.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "cypress": "^9.5.3",
    "cypress-mochawesome-reporter": "^3.2.0",
    "cypress-multi-reporters": "^1.6.1",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.4",
    "mocha": "^10.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.1",
    "mochawesome-report-generator": "^6.2.0",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.71.0"
  }
}
